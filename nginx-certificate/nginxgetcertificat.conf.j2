# {{ ansible_managed }}
worker_processes  1;

events {
    worker_connections  1024;
}

http {

    sendfile        on;

    keepalive_timeout  65;

    server {
        listen       80;
        server_name  {{ git_domain }} {{ tuleap_domain }};


        location ~ /.well-known/acme-challenge {
         allow all;
         root /etc/nginx/html;
        }

        root   /etc/nginx/html;
        index  index.html index.htm;

    }
}
